{% extends "layout.njk" %}


{% block content %}
    <div>
      <h1 style="color: white; text-align:center;"> GRID </h1>
    </div>

 <div class="cards">
  {% for item in items %}
  
    
          <div class="card" id="{{item.id}}">
          <div class="card-image {{ 'featured-wrapper' if item.featured}}">
            <img src="https://img.youtube.com/vi/{{item.id}}/mqdefault.jpg" alt="youtube thumb">
            {%if item.featured %}
            <div class="featured">Em destaque</div>


            {% endif %}
         </div>
          <div class="card-content"> 
            <p> {{item.title}} </p>
        </div>
        <div class="card-info">
            <p>{{item.duration}}</p>
        <p class="card-price">{{item.price}} </p>
        </div>
    </div>
  
   {% endfor %}
  </div>

 <div class="modal-overlay">
     <div class="modal">
         <a class="modalclose">
           <span class="material-icons">close</span>
         </a>
           <iframe id="frame" width="95%" height="95%" src="" frameborder="0"></iframe>
           <div class="modal-contet">

           </div>
     </div>
 </div>


 <script src="/script.js"></script>


{%  endblock %}